<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>

        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <form asp-action="Login">
                        <h1>Prijava na sistem</h1>
                        <div>
                            <input type="text" class="form-control" asp-for="username" placeholder="Username" required="" />
                        </div>
                        <div>
                            <input type="password" class="form-control" asp-for="password" placeholder="Password" required="" />
                        </div>
                        <div>

                            <input type="submit" value="Log in" class="btn btn-default" />
                        </div>

                        <div class="clearfix"></div>

                        <div class="separator">


                            <div class="clearfix"></div>
                            <br />
                            @if (error_poruka != null)
                            {
                                <br />
                                <div class="alert alert-danger">
                                    @error_poruka
                                </div>
                            }
                            <div>
                                <h1><i class="fa fa-star"></i> Hotel Star</h1>
                                <p>©2018 Maid Mehić Faruk Kardović</p>
                            </div>
                        </div>
                    </form>
                </section>
            </div>         
        </div>
    </div>
</body>

