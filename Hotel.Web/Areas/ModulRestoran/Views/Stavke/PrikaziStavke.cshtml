@using Hotel.Data.Models;

@model Hotel.Web.Areas.ModulRestoran.ViewModels.PrikaziStavkeVM
@{
    Layout = "_LayoutAjax";

    ViewData["Title"] = "PrikaziStavke";

}

<style>
    #tabela td {
        text-align: center;
    }

    #tabela th {
        text-align: center;
    }

    .tdPolje {
        text-align: right;
        padding-right: 10px;
    }

    b {
        display: inline-block;
        width: 150px;
    }

    .tdValidacija {
        padding-left: 10px;
    }

    .validacija span {
        display: inline-block;
        width: 200px;
    }

    .form-control {
        margin-bottom: 10px;
        width: 250px;
    }

    .divKlasa {
        margin-left: auto;
        margin-right: auto;
        width: 55%;
    }

     #tabela td {
        text-align: center;
    }

    #tabela th {
        text-align: center;
    }
</style>
<table class="table table-hover" id="tabela">
    <tr>
        <th>Proizvod</th>
        <th>Vrsta</th>
        <th>Količina</th>
        <th>Mjerna jedinica</th>
        <th>Akcija</th>
    </tr>
    @foreach (Stavke s in Model.Stavke)
    {
        <tr>
            <td>@s.Proizvodi.Naziv</td>
            <td>@s.Proizvodi.Vrsta</td>
            <td>@s.Kolicina</td>
            <td>@s.Proizvodi.MjernaJedinica</td>
            <td><a href="/ModulRestoran/Stavke/ObrisiStavku?Id=@s.Id" class="btn btn-danger" ajax-poziv="da" ajax-rezultat="ajaxDiv">Obriši</a></td>
        </tr>
    }
</table>
<a href="/ModulRestoran/Proizvod/PrikaziZalihe" class="btn btn-round btn btn-danger">Završi</a>
    
