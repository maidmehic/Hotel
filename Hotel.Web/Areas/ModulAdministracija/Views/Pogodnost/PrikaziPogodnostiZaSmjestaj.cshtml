@using Hotel.Data.Models;
@{
    ViewData["Title"] = "PrikaziPogodnostiZaSmjestaj";
    List<PogodnostiSmjestaja> temp = (List<PogodnostiSmjestaja>)ViewData["p"];
    int smjestajID = (int)ViewData["smjestajID"];
}

<h2>PrikaziPogodnostiZaSmjestaj</h2>
<a href="/ModulAdministracija/Pogodnost/DodajPogodnostZaSmjestaj?smjestajID=@smjestajID" class="btn btn-success" ajax-poziv="da" ajax-rezultat="ajaxDiv">Dodaj</a><br /><br />
<div class="form-group" id="ajaxDiv"></div>

<form>
    <table class="table table-striped">
        <tr>
            <th>Pogodnost</th>
            <th>Akcija</th>
        </tr>
        @foreach(PogodnostiSmjestaja p in temp)
        {
            <tr>
                <td>@p.Pogodnost.Opis</td>
                <td><a href="/ModulAdministracija/Pogodnost/ObrisiPogodnostZaSmjestaj?id=@p.Id" class="btn btn-primary">Obriši</a></td>
            </tr>

        }
    </table>
</form>

