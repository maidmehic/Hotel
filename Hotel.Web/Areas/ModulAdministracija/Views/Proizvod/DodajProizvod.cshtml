@using Hotel.Data.Models;
@model Hotel.Web.Areas.ModulAdministracija.ViewModels.NoviProizvodVM

@{

    Layout = Model.Link.ToString();
    ViewData["Title"] = "Novi proizvod";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

<style>
    .tdPolje {
        text-align: right;
        padding-right: 10px;
        display: inline-block;
        width: 150px;
    }

    /*b {
        display: inline-block;
        width: 150px;
    }*/

    .tdValidacija {
        padding-left: 10px;
    }

    .validacija span {
        display: inline-block;
        width: 300px;
    }

    .form-control {
        margin-bottom: 10px;
        width: 200px;
    }
    .divKlasa {
        margin-left: auto;
        margin-right: auto;
        width: 50%;
    }
    
</style>

<div class="divKlasa">

    <form asp-action="Snimi" asp-controller="Proizvod">
        <table>
            <tr>
                <td><input asp-for="Kolicina" hidden /></td>
            </tr>
            <tr>
                <th class="tdPolje">Naziv</th>
                <td><input asp-for="Naziv" class="form-control" placeholder="Unesite naziv" /></td>
                <td class="tdValidacija"><span style="color:red" class="validacija">@Html.ValidationMessageFor(x => x.Naziv)</span></td>
            </tr>
            <tr>
                <th class="tdPolje">Cijena</th>
                <td><input asp-for="Cijena" class="form-control" placeholder="Unesite cijenu" /></td>
                <td class="tdValidacija"><span style="color:red" class="validacija">@Html.ValidationMessageFor(x => x.Cijena)</span></td>
            </tr>
            <tr>
                <th class="tdPolje">Vrsta</th>
                <td>
                    <select asp-for="Vrsta" asp-items="@Model.VrstaStavke" class="form-control"></select>
                </td>
                <td class="tdValidacija"> <span style="color:red" class="validacija">@Html.ValidationMessageFor(x => x.Vrsta)</span></td>
            </tr>
            <tr>
                <th class="tdPolje">Mjerna jedinica</th>
                <td>
                    <select asp-for="MjernaJedinica" asp-items="@Model.MjernaJedinicaStavke" class="form-control"></select>
                </td>
                <td class="tdValidacija"><span style="color:red" class="validacija">@Html.ValidationMessageFor(x => x.MjernaJedinica)</span></td>
            </tr>
            <tr>
                <td></td>
                <td style="text-align:center;">
                    <input type="submit" value="Sačuvaj" class=" btn btn-round btn-success" style="width:50%;" />
                </td>
            </tr>
        </table>


    </form>
</div>

<br /><br />


