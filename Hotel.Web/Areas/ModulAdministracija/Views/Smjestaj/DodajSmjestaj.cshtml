@model Hotel.Web.Areas.ModulAdministracija.ViewModels.NoviSmjestajVM
@{
    ViewData["Title"] = "DodajSmjestaj";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
<h1>Novi smjestaj</h1>
<form action="/ModulAdministracija/Smjestaj/Snimi">
    <table>
        <tr>
            <td>
                @Html.HiddenFor(x=>x.Zauzeto)
            </td>
        </tr>
        <tr>
            <td>Broj smještaja</td>
            <td>@Html.TextBoxFor(x=>x.BrojSmjestaja,new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>Sprat</td>
            <td>@Html.TextBoxFor(x => x.Sprat, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>Kvadratura</td>
            <td>@Html.TextBoxFor(x => x.Kvadratura, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>Broj kreveta</td>
            <td>@Html.TextBoxFor(x => x.BrojKreveta, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>Vrsta smještaja</td>
            <td>@Html.DropDownListFor(x => x.VrstaSmjestajaId,Model._vrstaStavke, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>Cijena noćenja</td>
            <td>@Html.TextBoxFor(x=>x.Cijena,new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td><input type="submit" value="Sašuvaj" class="btn btn-success" /></td>
        </tr>
    </table>
</form>

