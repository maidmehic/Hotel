@using Hotel.Data.Models;
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Stavke dostave";
}
@model Hotel.Web.Areas.ModulAdministracija.ViewModels.PrikaziStavkeDostaveVM
<style>
   #tabela td {
        text-align: center;
        padding:10px;
    }

    #tabela th {
        text-align: center;
        padding: 10px;
    }
</style>

<table class="table table-striped" id="tabela">
    <tr>
        <th>Proizvod</th>
        <th>Vrsta</th>
        <th>Cijena</th>
        <th>Količina</th>
        <th>Mjerna jedinica</th>
    </tr>
    @foreach (DostavaStavke d in Model.StavkeDostave)
    {
        <tr>
            <td>@d.Proizvod.Naziv</td>
            <td>@d.Proizvod.Vrsta</td>
            <td>@d.Proizvod.Cijena KM</td>
            <td>@d.Kolicina</td>
            <td>@d.Proizvod.MjernaJedinica</td>
        </tr>

    }

</table>

