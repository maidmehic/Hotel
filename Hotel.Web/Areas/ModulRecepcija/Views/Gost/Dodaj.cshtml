@model Hotel.Web.Areas.ModulRecepcija.ViewModels.GostDodajVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

@{
    ViewData["Title"] = "Dodaj";
}

<h2>Dodaj Gosta</h2>
<form asp-action="Dodaj" asp-controller="Gost" method="post">

    <div class="form-group">
        <label>Ime:</label>
        <input asp-for="Ime" class="form-control" />
        <span asp-validation-for="Ime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Prezime:</label>
        <input asp-for="Prezime" class="form-control" />
        <span asp-validation-for="Prezime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Grad:</label>
        @Html.DropDownListFor(x => x.GradId, Model.Gradovi, "--Odaberite Grad--", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.GradId,"", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Broj Pasosa:</label>
        <input asp-for="BrojPasosa" class="form-control" />
        <span asp-validation-for="BrojPasosa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Drzavljanstvo:</label>
        <input asp-for="Drzavljanstvo" class="form-control" />
        <span asp-validation-for="Drzavljanstvo" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label>Datum Rodenja:</label>
        <input asp-for="DatumRodenja" type="datetime-local" class="form-control" />
        <span asp-validation-for="DatumRodenja" class="text-danger"></span>
    </div>

    @*<label>Datum Rodenja:</label>
        <div class="form-group">
            <div class="input-group date datepicker" data-provide="datepicker">
                <input type="text" class="form-control">
                <div class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </div>
            </div>
        </div>
        <script type="text/javascript">
            $(".datepicker").datetimepicker({
                format: "dd MM yyyy - hh:ii"
            });
        </script>*@

    <div class="form-group">
        <label>Telefon:</label>
        <input asp-for="Telefon" class="form-control" />
        <span asp-validation-for="Telefon" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Email:</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Spol:</label>


        <select asp-for="Spol" class="form-control">
            <option>M</option>
            <option>Ž</option>

        </select>

    </div>

    <br />
    <input type="submit" value="Snimi" class="btn btn-primary" />


</form>

