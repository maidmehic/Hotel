@model Hotel.Web.Areas.ModulRecepcija.ViewModels.GostDodajVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

    @{
        ViewData["Title"] = "Dodaj";
    }
    <h2>Dodaj</h2>
    <form asp-action="Dodaj" asp-controller="Gost" method="post">

        <div>
            <label>Ime:</label>
            <input asp-for="Ime" class="form-control" />
            <span asp-validation-for="Ime" class="text-danger"></span>
        </div>

        <div>
            <label>Prezime:</label>
            <input asp-for="Prezime" class="form-control" />
            <span asp-validation-for="Prezime" class="text-danger"></span>
        </div>
        <div>
            <label>Grad:</label>
            @Html.DropDownListFor(x => x.Grad.Id, Model.Gradovi, "--Odaberite Grad--", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Grad.Id,"Odaberite grad",new { @class="text-danger"})
        </div>
        <div>
            <label>Broj Pasosa:</label>
            <input asp-for="BrojPasosa" class="form-control" />
            <span asp-validation-for="BrojPasosa" class="text-danger"></span>
        </div>
        <div>
            <label>Drzavljanstvo:</label>
            <input asp-for="Drzavljanstvo" class="form-control" />
            <span asp-validation-for="Drzavljanstvo" class="text-danger"></span>
        </div>
        <div>
            <label>Datum Rodenja:</label>
            <input asp-for="DatumRodenja" class="form-control" />

        </div>

        <div>
            <label>Telefon:</label>
            <input asp-for="Telefon" class="form-control" />
            <span asp-validation-for="Telefon" class="text-danger"></span>
        </div>
        <div>
            <label>Email:</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div>
            <label>Spol:</label>
            <input asp-for="Spol" class="form-control" />

        </div>


        <input type="submit" value="Snimi" class="btn btn-primary" />


    </form>

