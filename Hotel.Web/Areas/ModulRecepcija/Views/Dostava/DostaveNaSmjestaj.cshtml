@model Hotel.Web.Areas.ModulRecepcija.ViewModels.DostavaDostaveNaSmjestajVM
@{
    ViewData["Title"] = "Prethodne dostave na smjestaj";
}


<div class="form-group">
    <label>Rezervisan smjestaj</label>
    <input class="form-control" asp-for="@Model.RezervisanSmjestaj" readonly/>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Datum</th>
            <th>Zavrsena</th>
            <th>Broj stavki</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.dostave)
        {
            <tr>
                <td>@item.Datum</td>
                <td>@(item.Zavrsena ? "Da" : "Ne")</td>
                <td>@item.BrojStavki</td>
            </tr>
        }


    </tbody>
</table>
