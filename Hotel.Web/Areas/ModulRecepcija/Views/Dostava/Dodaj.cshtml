@model Hotel.Web.Areas.ModulRecepcija.ViewModels.DostavaDodajVM
@{
    ViewData["Title"] = "NovaDostava";
}

<h2>Nova dostava</h2>

<form asp-action="Dodaj" asp-controller="Dostava" method="post">

    <input asp-for="RezervisanSmjestajId" hidden />

    <div class="form-group">
        <label>Naziv: </label>
        <input asp-for="Naziv" class="form-control" />
    </div>
    <div class="form-group">
        <label>Kolicina: </label>
        <input asp-for="Kolicina" class="form-control" />
    </div>
    <div class="form-group">
        <label>Cijena: </label>
        <input asp-for="Cijena" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Spasi" class="btn btn-success"/>
    </div>
</form>