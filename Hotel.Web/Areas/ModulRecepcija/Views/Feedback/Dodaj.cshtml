@model Hotel.Web.Areas.ModulRecepcija.ViewModels.FeedbackDodajVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "Dodaj";
}
<h2>Dodaj Feedback</h2>
<form asp-action="Dodaj" asp-controller="Feedback" method="post">
    <input asp-for="CheckINId" hidden />
    <input asp-for="GostId" hidden />

    <div class="form-group">
        <label>Sadrzaj</label>
        <input asp-for="Sadrzaj" />
        <span asp-validation-for="Sadrzaj" class="text-danger"></span>
    </div>
    <input type="submit" value="Snimi" />
</form>
