@model Hotel.Web.Areas.ModulRecepcija.ViewModels.TipUslugeDodajVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "Dodaj";
}
<h2>Dodaj Tip usluge</h2>
<form asp-action="Dodaj" asp-controller="TipUsluge" method="post">

    <div>
        <label>Naziv:</label>
        <input asp-for="Naziv" class="form-control" />
        <span asp-validation-for="Naziv" class="text-danger"></span>
    </div>

    <div>
        <label>Cijena:</label>
        <input asp-for="Cijena" class="form-control" />
        <span asp-validation-for="Cijena" class="text-danger"></span>
    </div>

    <input type="submit" value="Snimi" class="btn btn-primary" />


</form>
