@model Hotel.Web.Areas.ModulRecepcija.ViewModels.RezervisanSmjestajIndexVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "Rezervisani smještaji";
}




<table class="table table-striped tabela">
    <thead>
        <tr>
            <th>Podaci o rezervaciji</th>
            <th>Podaci o gostu</th>
            <th>Podaci o smještaju</th>
            <th>Akcije</th>

        </tr>
       
    </thead>
    <tbody>

        @foreach (var i in Model.smjestaji)
        {
            <tr>
                <td>@i.CheckIN</td>
                <td>@i.Gost</td>
                <td>@i.Smjestaj</td>
                <td>
                    @Html.ActionLink("Detalji", "IndexOdabranogSmjestaja", "RezervisanSmjestaj",new { CheckINId=i.CheckINID, SmjestajId=i.SmjestajId }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Obrisi", "Obrisi", "RezervisanSmjestaj", new { ID = i.Id }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("Usluge", "UslugeOdabranogSmjestaja", "RezervisanaUsluga", new { RezervisanSmjestajID=i.Id },new {@class="btn btn-warning"})
                  


                </td>
            </tr>
        }

    </tbody>
</table>

@Html.ActionLink("Prikazi smještaje", "ProvjeriSlobodanSmjestaj", "RezervisanSmjestaj", new { }, new { @class = "btn btn-success" })


<script type="text/javascript">
    $('.tabela').DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Croatian.json",
        },
        "ordering": false
    });

</script>