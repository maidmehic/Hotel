@model Hotel.Web.Areas.ModulRecepcija.ViewModels.RezervisanSmjestajDodajVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "Dodaj";
}
<h2>Dodaj</h2>
<form asp-action="Dodaj" asp-controller="RezervisanSmjestaj" method="post">
    <div>
        <label>Check In:</label>
        @Html.DropDownListFor(x => x.CheckIN.Id, Model.Checkini, "Odaberite Check In", new { @class = "form-control" })
    </div>

    <div>
        <label></label>
        @Html.DropDownListFor(x => x.Smjestaj.Id, Model.Smjestaji, "Odaberite Smjestaj Hotela", new { @class = "form-control" })
    </div>
    <div>
        <label></label>
        @Html.DropDownListFor(x => x.Gost.Id, Model.Gosti, "Odaberite Gosta koji boravi u navedenom smjestaju", new { @class = "form-control" })
    </div>

    <input type="submit" value="Snimi" />
</form>