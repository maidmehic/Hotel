@model Hotel.Web.Areas.ModulRecepcija.ViewModels.RezervisanSmjestajDodajGostaSobiVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "DodajGostaSobi";
}
<h2>Dodaj gosta sobi</h2>
<form asp-action="DodajGostaSobi" asp-controller="RezervisanSmjestaj" method="post">

    <input asp-for="CheckInId" value="@Model.CheckInId" hidden />
    <input asp-for="SmjestajId" value="@Model.SmjestajId" hidden />

    <div class="form-group">
        <label>Gost: </label>
        <select asp-for="GostId">

            @foreach (var i in Model.Gosti)
            {
                <option value="@i.Value">@i.Text</option>
            }

        </select>     
        
    </div>
    <input type="submit" value="Spasi gosta" />
</form>
