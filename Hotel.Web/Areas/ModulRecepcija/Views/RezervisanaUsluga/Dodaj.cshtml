@model Hotel.Web.Areas.ModulRecepcija.ViewModels.RezervisanaUslugaDodajVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "Dodaj";
}
<h2>Dodaj Rezervisanu Uslugu</h2>

<form asp-action="Dodaj" asp-controller="RezervisanaUsluga" method="post">
    <div>
        <label>Check In:</label>
        @Html.DropDownListFor(x => x.CheckIN.Id, Model.Checkini,"Odaberite Check In", new { @class = "form-control" })
    </div>

    <div>
        <label>Usluga Hotela:</label>
        @Html.DropDownListFor(x=>x.Usluga.Id,Model.UslugeHotela,"Odaberite Uslugu Hotela", new { @class = "form-control" })
    </div>


    <input type="submit" value="Snimi"/>
</form>
