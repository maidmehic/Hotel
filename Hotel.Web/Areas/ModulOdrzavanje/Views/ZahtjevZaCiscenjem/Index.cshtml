@model Hotel.Web.Areas.ModulRecepcija.ViewModels.ZahtjevZaCiscenjemIndexVM
@{
    ViewData["Title"] = "Zahtjevi za čišćenjem";
}

<table class="table table-striped tabela">

    <thead>
        <tr>
            <th>Zaposlenik</th>
            <th>Datum zahtjeva</th>
            <th>Opis</th>
            <th>Prioritet</th>
            <th>Smjestaj </th>
            <th> Obavljen </th>
            <th>Akcija </th>
           
        </tr>



    </thead>



    <tbody>
        @foreach (var i in Model.zahtjevi)
        {
            <tr>

                <td>@i.Zaposlenik</td>
                <td>@i.DatumZahtjeva</td>
                <td>@i.Opis</td>
                <td>@i.Prioritet</td>
                <td>@i.Smjestaj</td>
                <td>@i.Obavljen</td>
              


                <td>

                    @Html.ActionLink("Oznaci Obavljenim", "OznaciObavljenim", "ZahtjevZaCiscenjem", new { ZahtjevId=i.Id, CistacicaId = 2 }, new { @class = "btn btn-success" })
                  
                </td>




            </tr>
        }
    </tbody>
</table>
<div id="ajaxDiv"></div>
<script type="text/javascript">
    $('.tabela').DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Croatian.json"
        }
    });

</script>