@model Hotel.Web.Areas.ModulRecepcija.ViewModels.DodajStavkuVM
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "Dodaj Stavku";
}

<form asp-action="Dodaj" asp-controller="Stavke" method="post">

    @if (ViewBag.Poruka != null)
    {
        <div class="alert alert-danger">
            <span>@ViewBag.Poruka</span>
        </div>
    }

    <div class="form-group">
        <label>Kolicina:</label>
        <input asp-for="Kolicina" min="0" class="form-control" />

    </div>

    <div class="form-group">
        <label>Proizvodi</label>
        @Html.DropDownListFor(x => x.Proizvod.Id, Model.Proizvodi, new { @class = "form-control" })

    </div>
    <input asp-for="NarudzbaId" value="@Model.NarudzbaId" hidden>


    <div class="dugmic">
        <a asp-action="Dodaj" asp-controller="Proizvod" asp-route-NarudzbaId="@Model.NarudzbaId" class="btn btn-success" ajax-poziv="da" ajax-rezultat="ajaxDiv">Dodaj proizvod</a>
    </div>

    <div class="dugmic">
        <input type="submit" value="Spasi stavku" class="btn btn-info" />
    </div>
</form>

<div id="ajaxDiv"></div>

<style type="text/css">

    .dugmic {
        width: 25px;
        display: inline;
        margin-top: 2px;
        padding: 5px;
    }
</style>