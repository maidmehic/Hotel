@model Hotel.Web.Areas.ModulRecepcija.ViewModels.PrikaziStavkeNarudzbeVM
@{ 

}

<table class="table table-bordered">

    <thead>
        <tr>
            <th>Naziv proizvoda</th>
            <th>Cijena proizvoda</th>
            <th>Kolicina</th>
            <th>Cijena stavke</th>

            <th>Akcija</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var i in Model.stavke)
        {
        <tr>
            <td>@i.NazivProizvoda</td>
            <td>@i.CijenaProizvoda</td>
            <td>@i.Kolicina</td>
            <td>@i.CijenaStavke</td>

            <td>@Html.ActionLink("Obrisi", "Obrisi", "Stavke", new { StavkaId = i.StavkaId, narudzbaID = Model.IdNarudzbe })   </td>


        </tr>
        }
        
    </tbody>

</table>