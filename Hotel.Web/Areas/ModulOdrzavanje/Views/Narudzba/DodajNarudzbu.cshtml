@model Hotel.Web.Areas.ModulRecepcija.ViewModels.DodajNarudzbuVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "DodajNarudzbu";
}
<h2>DodajNarudzbu</h2>

<form asp-action="DodajNarudzbu" asp-controller="Narudzba" method="post">

    <div>
        <label>Opis:</label>
        <input asp-for="Opis" class="form-control" />

    </div>

    <div>
        <label>Datum Kreiranja:</label>
        <input asp-for="DatumKreiranja" class="form-control" />

    </div>

    <div>
        <label>Hitnost:</label>
        <input asp-for="Hitnost" class="form-control" />

    </div>


    <input type="submit" value="Snimi" class="btn btn-primary" />


</form>

