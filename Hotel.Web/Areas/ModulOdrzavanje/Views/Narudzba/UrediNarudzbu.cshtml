@model Hotel.Web.Areas.ModulRecepcija.ViewModels.UrediNarudzbuVM
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "Uredi narudžbu";
}


<form asp-action="UrediNarudzbu" asp-controller="Narudzba" method="post">

    <div class="form-group">
        <label>Datum kreiranja:</label>
        <input type="date" asp-for="DatumKreiranja.Date" class="form-control" readonly />

    </div>

    <div class="form-group">
        <label>Opis:</label>
        <textarea asp-for="Opis" class="form-control"></textarea>

    </div>

    <div class="form-group">
        <label>Hitnost:</label>

        <select asp-for="Hitnost" value="@Model.Hitnost" class="form-control ">

            <option>Mala</option>
            <option>Srednja</option>
            <option>Velika</option>

        </select>


    </div>

    <div class="form-group">
        <input type="submit" value="Snimi" class="btn btn-primary" />
    </div>

</form>