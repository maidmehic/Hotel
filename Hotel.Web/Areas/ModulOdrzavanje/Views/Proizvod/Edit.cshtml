@model Hotel.Web.Areas.ModulOdrzavanje.ViewModels.ProizvodDodajVM
@{
    ViewData["Title"] = "Edit";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
<h2>Edit</h2>

<form asp-action="Edit" asp-controller="Proizvod" method="post">

    <input asp-for="ID" hidden/>

    <div class="form-group">
        <label>Naziv:</label>
        <input asp-for="Naziv" class="form-control" />

    </div>

    <div class="form-group">
        <label>Cijena:</label>
        <input asp-for="Cijena" class="form-control" />

    </div>


    <div class="form-group">
        <label>Vrsta:</label>
        <input asp-for="Vrsta" class="form-control" />

    </div>


    <input type="submit" value="Snimi" class="btn btn-primary" />


</form>

