@model Hotel.Web.Areas.ModulRecepcija.ViewModels.ProizvodDodajVM
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "Dodaj Proizvod";
    Layout = "LayoutBezFootera";
}
<h2>Dodaj proizvod</h2>
<br />

<form asp-action="Dodaj" asp-controller="Proizvod" method="post">

   

    <div class="form-group">
        <label>Naziv:</label>
        <input asp-for="Naziv" name="Naziv" class="form-control" />
        <span style="color:red">@Html.ValidationMessageFor(x => x.Naziv)</span>
    </div>


    <div class="form-group">
        <label>Cijena:</label>
        <input type="text" asp-for="Cijena" class="form-control" />
        <span style="color:red">@Html.ValidationMessageFor(x => x.Cijena)</span>
    </div>
   
    <div class="form-group">
        <label>Vrsta:</label>
        <select asp-for="Vrsta" class="form-control">
            <option>Hrana</option>
            <option>Piće</option>
            <option>Namirnica</option>
            <option>Sredstvo za čišćenje</option>
        </select>
        <span style="color:red">@Html.ValidationMessageFor(x => x.Vrsta)</span>
    </div>



    <input type="text" asp-for="NarudzbaId" value="@Model.NarudzbaId" hidden />
    <div>  <input type="submit" value="Snimi" class="btn btn-primary"/></div>



</form>



       
 

